<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleColor="@color/black"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleDimension="10dp"
    app:mrl_rippleDuration="250"
    app:mrl_rippleFadeDuration="75"
    app:mrl_rippleHover="true"
    app:mrl_rippleDelayClick="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_site_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/half_padding"
            android:layout_marginBottom="@dimen/half_padding"
            android:layout_marginLeft="@dimen/uni_padding"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_filter_1_black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/half_padding"
            android:layout_marginBottom="@dimen/half_padding"
            android:layout_marginLeft="@dimen/half_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="E-hentai" />
        <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
            android:id="@+id/switch_list_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/half_margin"
            app:base_release_color="@color/colorPrimaryDark"
            app:base_press_color="@color/colorPrimaryDark"
            app:ball_release_color="@color/colorPrimary"
            app:ball_press_color="@color/colorPrimary"
            app:icon_release="@drawable/icon_list"
            app:icon_press="@drawable/icon_grid"
            />
    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>
